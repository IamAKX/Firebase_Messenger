<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e0e0e0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:padding="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            />

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_status"
            android:text="This is my status"
            android:textSize="20dp"
            android:textStyle="italic"
            emojicon:emojiconSize="25dp"
            />
        <TextView
            android:paddingRight="10dp"
            android:gravity="right"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_status_time"
            android:text="11 minute ago"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAST ACTIVE"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="10dp"
                />

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_active"
                android:text="This is my status"
                android:textSize="18dp"
                android:textStyle="italic"
                emojicon:emojiconSize="20dp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JOINED FIREBASE MESSENGER"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />
            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_joinde"
                android:text="12 December 2016"
                android:textSize="18dp"
                android:textStyle="italic"
                emojicon:emojiconSize="20dp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>