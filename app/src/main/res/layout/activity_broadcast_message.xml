<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_broadcast_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"

    tools:context="com.akash.applications.firebasemessenger.BroadcastMessage">
    <ScrollView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/broadcastchat_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is message"
                android:textSize="20dp"
                emojicon:emojiconSize="25dp"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/broadcastchat_prompter"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#9acdcdcd"
        android:text="Broadcast by Sonu, tap here to reply"
        android:padding="10dp"
        android:textStyle="bold|italic"
        android:textColor="#c5878787"
        android:textSize="15dp"/>
</RelativeLayout>
